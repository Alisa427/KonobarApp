<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pinkyDark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="100dp"
                android:paddingBottom="10dp"
                android:src="@drawable/logo" />

            <Space
                android:layout_width="1600dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Space
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtCook"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:paddingTop="27dp"
                        android:text="Konobar: "
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/txtNameSurname"
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="27dp"
                        android:paddingRight="10dp"
                        android:text="Svako Svakić"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/imgBtnAccount"
                                android:layout_width="100dp"
                                android:layout_height="75dp"
                                android:backgroundTint="#00FFFFFF"
                                android:scaleType="fitCenter"
                                android:src="@drawable/person_icon"
                                tools:src="@drawable/person_icon"
                                app:showAsAction="ifRoom"/>

                        </LinearLayout>

                        <Space
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnOrders"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btns_accepted_ordered_styles"
                            android:paddingLeft="20dp"
                            android:text="Narudžbe"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNumberOfOrderCards"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/small_numbers_style_burgundy"
                            android:cursorVisible="false"
                            android:paddingLeft="18dp"
                            android:paddingTop="5dp"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:translationZ="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnAccept"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btns_accepted_ordered_styles"
                            android:paddingLeft="20dp"
                            android:text="Stolovi"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtAcceptedCards"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="false"
                            android:layout_marginLeft="180dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/small_number_style_green"
                            android:cursorVisible="false"
                            android:paddingLeft="18dp"
                            android:paddingTop="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:translationZ="10dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/btnReady"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/btns_accepted_ordered_styles"
                            android:paddingLeft="20dp"
                            android:text="Dnevni rad"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtReadyCards"
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="170dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/small_number_style_gray"
                            android:cursorVisible="false"
                            android:paddingLeft="18dp"
                            android:paddingTop="5dp"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:translationZ="10dp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtdayActivityInfo"
                android:layout_width="292dp"
                android:layout_height="67dp"
                android:layout_alignBottom="@+id/RecyclerVPozadina"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="1521dp"
                android:layout_marginTop="692dp"
                android:layout_marginEnd="107dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/btns_accepted_ordered_styles"
                android:gravity="center"
                android:paddingTop="2dp"
                android:text="Dnevni pazar: 170.50 KM \nBroj dnevnih narudžbi: 13"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:translationZ="30dp"
                android:visibility="visible"/>

            <Button
                android:id="@+id/btnNotifikacije"
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/recycleViewTables"
                android:layout_marginStart="1720dp"
                android:layout_marginEnd="-1420dp"
                android:layout_marginBottom="375dp"
                android:background="@drawable/btns_accepted_ordered_styles"
                android:rotation="-90"
                android:text="NOTIFIKACIJE"
                android:textAlignment="center"
                android:textDirection="rtl"
                android:textSize="20sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerVPozadina"
                android:layout_width="match_parent"
                android:layout_height="760dp"
                android:background="@drawable/recyclerview_style"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycleViewTables"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:background="@drawable/recyclerview_style"
                android:fadeScrollbars="true"
                android:paddingLeft="55dp"
                android:paddingTop="55dp"
                android:paddingRight="55dp"
                android:paddingBottom="55dp"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="vertical"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imgCook"
                android:layout_width="match_parent"
                android:layout_height="672dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:paddingLeft="200dp"
                android:paddingTop="20dp"
                android:src="@drawable/waiter_icon"
                android:translationZ="10dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txtNoCards"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgCook"
                android:layout_centerHorizontal="true"
                android:background="@drawable/order_list_style"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Nema kartica u ovom odjeljku!"
                android:textSize="46sp"
                android:textStyle="bold"
                android:translationZ="10dp"
                android:visibility="invisible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/orderItemsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:background="@drawable/recyclerview_style"
                android:fadeScrollbars="true"
                android:paddingLeft="55dp"
                android:paddingTop="55dp"
                android:paddingRight="55dp"
                android:paddingBottom="55dp"
                android:scrollbarSize="10dp"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbars="horizontal"
                android:textAlignment="textStart"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    <!-- Desni izbornik -->
    <FrameLayout
        android:id="@+id/right_drawer"
        android:background="@drawable/order_list_style"
        android:layout_width="400dp"
        android:layout_height="670dp"
        android:layout_gravity="end"
        android:layout_marginTop="210dp"
        app:cardCornerRadius="16dp"
        >
        <TextView
            android:id="@+id/txtNotifikacije"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:paddingLeft="25dp"
            android:layout_marginTop="50dp"
            android:text="Poruka od kuhara: \n Nema više begove čorbe!"
            android:textSize="20sp"
            android:scrollbars="vertical"
            android:overScrollMode="always"/>

    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>